    "version": "0.2.0",
    "configurations": [
        {
            "name": "Nodemon Launch Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "nodemon --ignore 'panel/*'",
            "runtimeArgs": [
                " "
            ],
            "program": "${workspaceRoot}/openparty.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
           }
    ]
}